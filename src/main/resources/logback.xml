<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT_ACCESS" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="LOGGLY" class="ch.qos.logback.ext.loggly.LogglyAppender">
        <endpointUrl>https://logs-01.loggly.com/inputs/66ad5389-c9b2-41b6-86b0-8c882c210ca6/tag/logback</endpointUrl>
        <pattern>%d{"ISO8601", UTC} %p %t %c{0}.%M - %m%n</pattern>
    </appender>

    <appender name="LOGGLY_ACCESS" class="ch.qos.logback.ext.loggly.LogglyAppender">
        <endpointUrl>https://logs-01.loggly.com/inputs/66ad5389-c9b2-41b6-86b0-8c882c210ca6/tag/logback</endpointUrl>
    </appender>


    <logger name="access" level="INFO" additivity="false">
        <appender-ref ref="STDOUT_ACCESS"/>
        <appender-ref ref="LOGGLY"/>
    </logger>

    <logger name="com.deepster" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="LOGGLY"/>
    </logger>
    <logger name="io.lettuce.core" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>


    <root level="WARN" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="LOGGLY"/>
    </root>
</configuration>
